            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    ViewBag.HinhAnh = Model.HinhAnh;
                } 
                <input name="HinhAnh" type="file" value="@Model.HinhAnh" />
                <span style="color:red">@ViewBag.upload</span>
                <br />
                <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh)" style="width: 200px; height: 250px" />
            </div>
        </div>

