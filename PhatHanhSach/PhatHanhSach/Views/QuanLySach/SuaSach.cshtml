            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonGiaXuat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGiaXuat, new { htmlAttributes = new { @class = "form-control" } })
